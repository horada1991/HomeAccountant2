<Window x:Class="HomeAccountant.UserHandler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeAccountant"
        mc:Ignorable="d"
        Title="HomeAccountant - Login and Registration" Height="235.887" Width="334.032">
    <Grid>
        <TextBox x:Name="UserNameTB" HorizontalAlignment="Left" Height="23" Margin="94,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="UserNameLabel" Content="Username:" HorizontalAlignment="Left" Margin="94,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="115,94,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>
        <Button x:Name="RegistrationBtn" Content="Register" HorizontalAlignment="Left" Margin="115,119,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="RegistrationBtn_Click"/>

    </Grid>
</Window>
